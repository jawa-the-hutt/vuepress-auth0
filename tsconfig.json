{
  "compilerOptions": {
    "target": "es5",
    "outDir": "dist",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "declaration": true,
    "declarationDir": "types",
    "allowJs": false,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "types": [
      "node",
      "jest",
      "auth0-js"
    ],
    "lib": [
      "dom",
      "es6",
      "es2017",
      "esnext.asynciterable"
    ]
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "demo"
  ]
}
